.choose_wrap{
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 80rpx;
    font-size: 20px;
    align-items: center;
    align-self: center;
    justify-content: space-between;
    background-color: #fff;
  }
  
.choose{
    display: flex;
    width: 30%;
    align-self: center;
    align-items: center;
    justify-content: center;
  }
.choose image{
    height: 70rpx;
    width: 70rpx;
}
.mall-product{
  width:100%;
  display: flex;
  flex-wrap: wrap;
  align-self: center;
  align-items: center;
  background-color: snow;

}
.mall-product .product{
  width: 50%;
  height: 420rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  /* border: 1px solid silver; */
  border-radius: 15rpx;
  padding-top: 25rpx;
}
.mall-product_1{
  width: 50%;
  display: flex;
  flex-direction: column;
  align-self: center;
  justify-content: center;
}
.product .img{
  width: 350rpx;
  height: 350rpx;
  border-radius: 20rpx;
}
.mall-product_2{
  display: flex;
  flex-direction: column;
  height: 80rpx; 
  width: 85%;
  background-color: snow;
  border-radius: 10rpx;
  /* align-items: center;
  justify-content: space-between; */
  padding-left: 20rpx;
  padding-right: 10rpx;
  margin-top: 15rpx;
  margin-bottom: 30rpx;
}
.mall-product .mall-txt1{
  font-size: 35rpx;
  font-weight: 200;
  
}
.mall-product .mall-txt2{
  font-size: 20rpx;
  font-weight: 200;
  color:#aaaaaa;
}
.mall-product .mall-txt3{
  font-size: 25rpx;
  font-weight: 200;
  color:red;
}