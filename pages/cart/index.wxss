page {
  background-color: #ffffff;
}
.cart_list{
    display: flex;
    flex-direction: row;
    width: 96%;
    height: 150rpx;
    align-self: center;
    align-items: center;
    justify-content: space-between;
  }
.product_list{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin-left: 30rpx;
  }
  .product_list_1{
    display: flex;
    flex-direction: row;
    margin-left: 22rpx;
  }
  .product_list_1 .cart_img{
      width: 100rpx;
      height: 100rpx;
  }
  .product_list_2{
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
  }

  .list_num{
    display: flex;
    flex-direction: row;
    width: 25%;
    justify-content: space-between;
    font-size: 20px;
    align-items: center;
  }
  .list_num image{
      width: 40rpx;
      height: 40rpx;
  }

  .line{
      width: 90%;
      height: 3rpx;
      background-color: silver;
      margin-bottom: 10rpx;
      margin:0 auto ;
  }

  .btn{
    position: fixed;
    margin-bottom: 0rpx;
    
  }
  .btn image{
    width: 65rpx;
    height: 65rpx;
  }
  .pay{
    display: flex;
    flex-direction: row;
    width: 50%;
    align-items: center;
    align-self: center;
    justify-content: center;
    height: 80rpx;
    background-color: rgb(26, 173, 25);
    border-radius: 8rpx;
  }
  .empty{
    margin-top: 200rpx;
    border:1rpx snow;
  }
  .empty image{
    width: 100%;
    height: 900rpx;
  }