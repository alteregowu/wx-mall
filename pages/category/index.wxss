.catrgory{
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 100vh;
    align-items: center;
    align-self: center;
    justify-content: space-between;
}
.catrgory_left{
    display: flex;
    width: 26%;
    height: 100vh;
    flex-direction: column;
    align-items: center;
    align-self: center;
}
.catrgory_left_1{
    display: flex;
    flex-direction: row;
    width: 74%;
    height: 100rpx;
    align-items: center;
    align-self: center;
    justify-content: space-between;
    font-size: 30rpx;
}
.left_img{
    width: 50rpx;
    height: 50rpx;
}
  
  /* 商品 */
.catrgory_right{
    display: flex;
    width: 69%;
    height: 100vh;
}
.catrgory_right_1{
    display: flex;
    flex-direction: row;
    width: 95%;
    align-self: center;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 10rpx;
    margin-top: 10rpx;
}
.catrgory_right_2{
    display: flex;
    flex-direction: row;
    width: 55%;
    align-self: center;
    align-items: center;
}
.right_img{
    width: 120rpx;
    height: 120rpx;
}

.line{
    width: 5rpx;
    height: 100vh;
    background-color: rgb(209, 213, 216);
}
.line_row{
    width: 95%;
    height: 5rpx;
    background-color: lightgray;
}